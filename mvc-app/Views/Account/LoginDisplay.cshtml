@model mvc_app.Models.Account.AccountModel;

@{
}

<h1>Login</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <!-- エラーをまとめて出す。
                関連するキーを指定している場合はここには表示されない。
                ModelOnlyと記述はあるが、キーを指定しない場合はここに表示される
             -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="@Model.UserId" class="control-label form-control-sm"></label>
                <input asp-for="@Model.UserId" class="form-control form-control-sm" />
                <span asp-validation-for="@Model.UserId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="@Model.Password" class="control-label form-control-sm"></label>
                <input asp-for="@Model.Password" class="form-control form-control-sm" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Login</button>
@*                 <input type="submit" value="login" class="btn btn-primary" /> *@
            </div>
        </form>
    </div>
</div>

