@{
    Layout = null;
    ViewData["Title"] = "MyJobIndex";
}

<html>
    <head>
        <title>mvcapp - @ViewData["Title"]</title>
    </head>
    <body>
        <h1>@ViewData["Title"] Page</h1>

        <a asp-controller="Myjob" asp-action="InputAddressForm">InputAddressForm</a>


        <hr />
        <div>
            <p>message: @ViewData["Message"]</p>
            <p>name: @ViewBag.Name</p>
        </div>
        <div>
            <ul>
                @* Razor loop *@
                @for (int i = 0; i < 3; i++)
                {
                    @if (i == 1)
                    {
                        <li>item_@i (★)</li>
                    } else
                    {
                        <li>item_@i</li>
                    }
                }
            </ul>
        </div>


    </body>
</html>
